<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yuan.customview.day05.ProgressBar
        android:id="@+id/custom_pb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:progressBarOuterColor="#2ae0c8"
        app:progressBarInnerColor="#fe6673"
        app:progressBarWidth="10dp"
        app:progressBarTextColor="#fe6673"
        app:progressBarTextSize="30sp"
        android:visibility="gone"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始改变形状"
        android:onClick="startChange"/>
    <com.yuan.customview.day05.ShapeView
        android:id="@+id/custom_shape"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        app:squareColor="#f00"
        app:circleColor="#0f0"
        app:triangleColor="#00f"/>
</RelativeLayout>
